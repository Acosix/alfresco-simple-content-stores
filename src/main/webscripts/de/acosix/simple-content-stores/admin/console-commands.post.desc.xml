<webscript>
    <shortname>Command Console - Simple Content Stores Commands</shortname>
    <description>Executes supported commands of the simple-content-stores command console plugin</description>
    <url>/ootbee/admin/command-console/simple-content-stores/help</url>
    <url>/ootbee/admin/command-console/simple-content-stores/listEncryptionKeys</url>
    <url>/ootbee/admin/command-console/simple-content-stores/enableEncryptionKey</url>
    <url>/ootbee/admin/command-console/simple-content-stores/disableEncryptionKey</url>
    <url>/ootbee/admin/command-console/simple-content-stores/countEncryptedSymmetricKeys</url>
    <url>/ootbee/admin/command-console/simple-content-stores/listEncryptionKeysEligibleForReEncryption</url>
    <url>/ootbee/admin/command-console/simple-content-stores/reEncryptSymmetricKeys</url>
    <family>OOTBee Support Tools</family>
    <format default="json">any</format>
    <negotiate accept="application/json">json</negotiate>
    <authentication>admin</authentication>
    <lifecycle>internal</lifecycle>
    <transaction bufferSize="8192" allow="readwrite">required</transaction>
</webscript>